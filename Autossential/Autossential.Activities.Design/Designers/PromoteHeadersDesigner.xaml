<sap:ActivityDesigner x:Class="Autossential.Activities.Design.Designers.PromoteHeadersDesigner"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:activity="clr-namespace:Autossential.Activities.Properties;assembly=Autossential.Activities"
                      xmlns:sap="clr-namespace:System.Activities.Presentation;assembly=System.Activities.Presentation"
                      xmlns:sapv="clr-namespace:System.Activities.Presentation.View;assembly=System.Activities.Presentation"
                      xmlns:sapc="clr-namespace:System.Activities.Presentation.Converters;assembly=System.Activities.Presentation"
                      xmlns:converters="clr-namespace:UiPath.Shared.Activities.Design.Converters"
                      xmlns:uip="clr-namespace:UiPath.Shared.Activities.Design.Controls">

    <sap:ActivityDesigner.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Themes\Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <sapc:ArgumentToExpressionConverter x:Key="ArgumentToExpressionConverter" />
            <converters:ActivityIconConverter x:Key="ActivityIconConverter" />
        </ResourceDictionary>
    </sap:ActivityDesigner.Resources>

    <sap:ActivityDesigner.Icon>
        <DrawingBrush Stretch="Uniform" Drawing="{Binding Path=ModelItem, Converter={StaticResource ActivityIconConverter}, ConverterParameter=pack://application:\,\,\,/Autossential.Activities.Design;component/themes/icons.xaml}" />
    </sap:ActivityDesigner.Icon>

    <uip:ActivityDecoratorControl Style="{StaticResource ActivityDecoratorStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="115" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="115" />
            </Grid.ColumnDefinitions>

            <Label Content="{x:Static activity:Resources.PromoteHeaders_InputDataTable_DisplayName}" Grid.Row="0" Grid.Column="0"
                   ToolTip="{x:Static activity:Resources.PromoteHeaders_InputDataTable_Description}"/>
            <sapv:ExpressionTextBox Grid.Row="1" Grid.Column="0" 
                                    ExpressionType="{Binding ModelItem.Properties[InputDataTable].PropertyType.GenericTypeArguments[0]}" 
                                    OwnerActivity="{Binding Path=ModelItem}" HintText="{x:Static activity:Resources.PromoteHeaders_InputDataTable_Description}" 
                                    UseLocationExpression="False"
                                    Expression="{Binding Path=ModelItem.InputDataTable, Converter={StaticResource ArgumentToExpressionConverter}, ConverterParameter=In, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            </sapv:ExpressionTextBox>

            <Label Content="{x:Static activity:Resources.PromoteHeaders_OutputDataTable_DisplayName}" ContentStringFormat="{}{0} (Output)" Grid.Row="0" Grid.Column="2"
                   ToolTip="{x:Static activity:Resources.PromoteHeaders_OutputDataTable_Description}"/>
            <sapv:ExpressionTextBox Grid.Row="1" Grid.Column="2" 
                                    ExpressionType="{Binding ModelItem.Properties[OutputDataTable].PropertyType.GenericTypeArguments[0]}" 
                                    OwnerActivity="{Binding Path=ModelItem}" HintText="{x:Static activity:Resources.PromoteHeaders_OutputDataTable_Description}" 
                                    UseLocationExpression="True"
                                    Expression="{Binding Path=ModelItem.OutputDataTable, Converter={StaticResource ArgumentToExpressionConverter}, ConverterParameter=Out, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            </sapv:ExpressionTextBox>
        </Grid>
    </uip:ActivityDecoratorControl>
</sap:ActivityDesigner>
